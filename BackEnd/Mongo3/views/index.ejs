<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="style.css" />
</head>
<body>
    <h1>Chats</h1>
    <form method="get" action="http://localhost:8080/chats/new">
       <button>Create chat</button>
    </form>
    <% for(let chat of chats) { %>
        <div class="chat-box">
            <p>from : <i><%= chat.from %></i></p>
            <div class="message-box">
                <p>Message : <%= chat.message %></p>
                    <form method="GET" action="/chats/<%= chat._id %>/edit">
                        <button>edit</button>
                    </form>
                    <br>
                    <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                        <button>DELETE</button>
                    </form>
            </div>
            <p>Received by  : <i><%= chat.to %></i></p>
            <hr/>
            <%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %><br>
            <%= chat.created_at.toString().split(" ")[0] %><br>
            <%= chat.created_at.toString().split(" ")[1] %><br>
            <%= chat.created_at.toString().split(" ")[2] %><br>
            <%= chat.created_at.toString().split(" ")[3] %><br>
            <%= chat.created_at.toString().split(" ")[4] %><br>
            <%= chat.created_at.toString().split(" ")[5] %><br>
        </div>
        <br>
        <br>
        <% } %>
</body>
</html>
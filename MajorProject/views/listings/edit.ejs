<% layout("/layouts/boilerplate") %>

<body>
    <h1>Edit</h1>
    <h3>Id : <%= listing.id %></h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <input name="listing[title]" value="<%= listing.title %>" type="text"/><br><br>
        <textarea name="listing[description]"  rows="5" cols="50"><%= listing.description %></textarea><br><br>
        <textarea name="listing[image]" rows="1" cols="50" ><%= listing.image %></textarea><br><br>
        <input name="listing[price]" value="<%= listing.price %>" type="number" /><br><br>
        <input name="listing[location]" value="<%= listing.location %>" type="text" /><br><br>
        <input name="listing[country]" value="<%= listing.country %>"type="text" /><br><br>
    <button>Edit</button>
    </form>
    
</body>
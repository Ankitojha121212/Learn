<% layout("/layouts/boilerplate") %>

    <h3>Welcome to WonderLust</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" id="index-anchor">
            <div class="card listing-card">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image " style="height:20rem">
                <div class="card-img-overlay">WonderLust</div>
                <div class="card-body">
                  <p class="card-text"><b><%= listing.title %></b></p>
                  <p class="card-text"> &#8377; <%= listing.price.toLocaleString("en-IN") %> /night</p>
                </div>
              </div>
            </a>
              <% } %>
    </div>
  
  